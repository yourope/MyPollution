<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.europeolympia.myapplication.activities.BtActivity"
    >

    <TextView
        android:id="@+id/textview"
        android:text="Bluetooth Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:textOn="ON"
        android:textOff="OFF"
        android:onClick="onToggleClicked"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/textview"
        android:layout_alignTop="@+id/buttonVisible"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@android:color/darker_gray"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/imageButton"
        android:onClick="listing"
        android:layout_width="85dp"
        android:layout_height="55dp"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/toggleButton"
        android:layout_toEndOf="@id/toggleButton"
        android:background="@android:color/darker_gray"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/devices"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:typeface="normal"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonVisible"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:text="Get visible"
        android:onClick="visible"
        android:background="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textview"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

</RelativeLayout>